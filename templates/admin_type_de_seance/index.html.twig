{% extends 'base.back.html.twig' %}

{% block title %}Type Seance index{% endblock %}

{% block body %}
    <h1>Les Type de seances </h1>
    <a href="{{ path('app_admin_type_de_seance_new') }}" class="btn btn-inverse-success p-2 mb-2">Nouveau</a>

    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Nom</th>
                <th>Prive</th>
                <th>Publique</th>
                {# <th>Description</th> #}
                <th>Tarif</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type_se_seance in type_se_seances %}
            <tr>
                {# <td>{{ type_se_seance.id }}</td> #}
                <td>{{ type_se_seance.nom }}</td>
                <td>{{ type_se_seance.prive ? 'Yes' : 'No' }}</td>
                <td>{{ type_se_seance.publique ? 'Yes' : 'No' }}</td>
                <td>
                    {% for tarif in type_se_seance.tarifs %}
                        {{ tarif.nom }}
                    {% endfor %}
                </td>
                {# <td>{{ type_se_seance.description }}</td> #}

                <td>
                    <a href="{{ path('app_admin_type_de_seance_show', {'id': type_se_seance.id}) }}">
                        <span class="menu-icon">
                            <i class="mdi mdi-eye btn btn-rounded btn-inverse-primary m-1"></i>
                        </span>
                    </a>
                    <a href="{{ path('app_admin_type_de_seance_edit', {'id': type_se_seance.id}) }}">
                        <span class="menu-icon">
                            <i class="mdi mdi-border-color btn btn-rounded btn-inverse-warning m-1"></i>
                        </span>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun type trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
